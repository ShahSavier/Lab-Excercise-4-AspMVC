@model mvc1153.Models.PosLajuParcel;

<head>
    <title> Pos Laju Form </title>
    
</head>
<body>
    @using (Html.BeginForm())
    {
        // Trigger pop up validation
        <!--
          validation for all form
            => Html.ValidationSummary()
          Validation for part by part (property)
            => Html.ValidationMessageFor(x => x.????)
        -->
        <!-- Sender Properties -->
        <br /><h5> Sender Information </h5><br />
        <div class="row">
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.SenderName)</label>
                @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderName, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-6">
                <label>@Html.DisplayNameFor(x => x.SenderAddress)</label>
                @Html.TextBoxFor(x => x.SenderAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderAddress, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.SenderPhone)</label>
                @Html.TextBoxFor(x => x.SenderPhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderPhone, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.SenderEmail)</label>
                @Html.TextBoxFor(x => x.SenderEmail, new { @class = "form-control" })
            </p>
        </div>

        <!-- Receiver Properties -->
        <br /><h5> Receiver Information </h5><br />
        <div class="row">
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.ReceiverName)</label>
                @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ReceiverName, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-6">
                <label>@Html.DisplayNameFor(x => x.ReceiverAddress)</label>
                @Html.TextBoxFor(x => x.ReceiverAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ReceiverAddress, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.ReceiverPhone)</label>
                @Html.TextBoxFor(x => x.ReceiverPhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ReceiverPhone, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.ReceiverEmail)</label>
                @Html.TextBoxFor(x => x.ReceiverEmail, new { @class = "form-control" })
            </p>
        </div>

        <!-- Parcel Information Properties -->
        <br /><h5> Parcel Information </h5><br />
        <div class="row">
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.IndexWeight)</label>
                <!--Using dropdown and link with dictionary-->
                <!-- DicWeight tu adalah Dictionary  -->
                @Html.DropDownListFor(x => x.IndexWeight, new SelectList(Model.DictWeight, "Key", "Value"), "Select Weight", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.IndexWeight, "", new { @class = "text-danger" })
            </p>
            <p class="col-md-4">
                <label>@Html.DisplayNameFor(x => x.IndexZone)</label>
                <!--Using dropdown and link with dictionary-->
                <!-- Third parameter "Select Zone" for drop down list by default, user need to choise-->
                @Html.DropDownListFor(x => x.IndexZone, new SelectList(Model.DictZone, "Key", "Value"), "Select Zone", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.IndexZone, "", new { @class = "text-danger" })
            </p>
        </div>
        <br/>
        <!-- End Of Receiver Properties -->

        <p>
            <input type="submit" value="Submit" class="btn-primary"/>
        </p>
    }
</body>